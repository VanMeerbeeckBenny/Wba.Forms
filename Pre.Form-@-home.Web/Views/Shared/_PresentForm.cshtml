
@{
    ViewData["Title"] = "_PresentForm";
}
@model SimpelFormViewModel;



<h1>_PresentForm</h1>

<div class="row">
    <div class="col-md-6">
        <h3>using GET</h3>
        <form method="post">
            <div>
                <label asp-for="FirstName"> </label>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" placeholder="" />

                <span asp-validation-for="FirstName" class="text-danger">  </span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" value="@Model.LastName" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-check form-switch">
                <label class="form-check-label" asp-for="Subscribed"></label>
                <input class="form-check-input" asp-for="Subscribed" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

